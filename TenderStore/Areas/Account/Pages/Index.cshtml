@page
@model TS.Endpoints.UI.Areas.Account.Pages.IndexModel
@{
    Layout = "_AccountLayout";
}
<div class="content">
    <div class="container-fluid">
        <div class="content-box">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-xl-4 col-sm-8">
                    <div class="auth shadow-box rounded-4 p-4">
                        <div class="auth-content">
                            <h3 class="font-20 text-center auth-title-form">ورود به فروشگاه</h3>
                            <form action="" class="mt-3">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control float-input" id="floatingInput"
                                           placeholder="تلفن همره / ایمیل">
                                    <label for="floatingInput">تلفن همره / ایمیل</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="password" class="form-control float-input" id="floatingPassword"
                                           placeholder="کلمه عبور">
                                    <label for="floatingPassword">کلمه عبور</label>
                                </div>
                                <div class="row gy-3 mb-3">
                                    <div class="col-sm-6">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" id="rememberME">
                                            <label class="form-check-label" for="rememberME">
                                                مرا به خاطر
                                                بسپار
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group text-sm-end text-start">
                                            <a href="" class="text-primary">فراموشی رمز عبور</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit"
                                            class="btn main-color-three-bg border-0 rounded-pill w-100 text-white waves-effect waves-light">
                                        ورود
                                    </button>
                                </div>
                            </form>
                            <div class="divider">
                                <span>یا</span>
                            </div>
                            <div class="d-flex justify-content-center">
                                <a href="">عضو نیستی؟ ثبت نام در فروشگاه</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>