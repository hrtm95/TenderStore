@page
@model TS.Endpoints.UI.Areas.Account.Pages.RegisterModel
@{
    Layout = "_AccountLayout";
}
<div class="content">
    <div class="container-fluid">
        <nav aria-label="breadcrumb" class="my-lg-0 my-2">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="#" class="font-14 text-muted">خانه</a></li>
                <li class="breadcrumb-item active main-color-one-color font-14" aria-current="page">ثبت نام</li>
            </ol>
        </nav>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="content-box">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-xl-4 col-sm-8">
                    <div class="auth shadow-box rounded-4 p-4">
                        <div class="auth-content">
                            <h3 class="font-20 text-center auth-title-form">ثبت نام در فروشگاه</h3>
                            <form method="post" asp-page-handler="Create" class="mt-3">
                                <div class="form-floating mb-3">
                                    <input name="PhoneNumber" type="text" class="form-control float-input" id="PhoneNumber"
                                           placeholder="تلفن همراه">
                                    <label for="floatingInputMobile">تلفن همراه</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input name="Email" type="text" class="form-control float-input" id="Email"
                                           placeholder="ایمیل">
                                    <label for="floatingInputEmail">ایمیل</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="password" name="Password" class="form-control float-input" id="Password"
                                           placeholder="کلمه عبور">
                                    <label for="Password">کلمه عبور</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input name="ConfirmPassword" type="password" class="form-control float-input" id="ConfirmPassword"
                                           placeholder="تکرار کلمه عبور">
                                    <label for="ConfirmPassword">تکرار کلمه عبور</label>
                                </div>
                                <div class="form-group">
                                    <button type="submit"
                                            class="btn main-color-three-bg border-0 rounded-pill w-100 text-white waves-effect waves-light">
                                        ثبت
                                        نام
                                    </button>
                                </div>
                            </form>
                            <div class="divider">
                                <span>یا</span>
                            </div>
                            <div class="d-flex justify-content-center">
                                <a asp-page="/Index">حساب کاربری دارم ! ورود به فروشگاه</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>